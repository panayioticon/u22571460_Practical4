﻿@model IEnumerable<u22571460_Practical4.Models.GroupMember>
@{
    ViewBag.Title = "ListOfMembers";
}
<head>
    <link href="../Content/MainPage.css" rel="stylesheet" />

</head>
<body>
    <h2>List Of Members</h2>
    <table class="people">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StudentNumber) </th>
            <th>@Html.DisplayNameFor(model => model.Name) </th>
            <th>@Html.DisplayNameFor(model => model.Surname) </th>
            <th>@Html.DisplayNameFor(model => model.EmailAddress) </th>
            <th>@Html.DisplayNameFor(model => model.myLink) </th>
            <th>Delete</th>
        </tr>



        @foreach (var i in Model)
        {
            <tr class="groupMemberRow">
                <td>@Html.DisplayFor(item => i.StudentNumber) </td>
                <td class="groupMemberName">@Html.DisplayFor(item => i.Name) </td>
                <td>@Html.DisplayFor(item => i.Surname) </td>
                <td>@Html.DisplayFor(item => i.EmailAddress) </td>
                <td id="links"><a href="@Url.Content(i.myLink)">LINK</a></td>
                <td id="links"><button  onclick="deleteMember(this)">Delete</button></td>
            </tr>

        }
    </table>
    <script src="~/Scripts/Member.js"></script>
</body>

